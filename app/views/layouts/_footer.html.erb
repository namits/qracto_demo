              <% end %>

              <div class="field">
                <%= form.label :name %>
                <%= form.text_field :name, id: :visitor_name, validate: { presence: true }  %>
              </div>

              <div class="field">
                <%= form.label :email %>
                <%= form.text_field :email, id: :visitor_email %>
              </div>

              <div class="field">
                <%= form.label :mobile_no %>
                <%= form.text_field :mobile_no, id: :visitor_mobile_no %>
              </div>

              <div class="field">
                <%= form.label :country %><br>
                <%= form.country_select :country, id: :visitor_country, selected: "US" %>
              </div>
              <br>
              <div class="actions">
                <%= form.submit "Submit", class: 'btn-success' %>
              </div>
            <% end %>
          </div>
